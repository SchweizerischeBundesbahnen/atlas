#!groovy

pipeline {
    agent {
        label 'java-small'
    }

    options {
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr:'5'))
        timeout(time: 10, unit: 'MINUTES')
        timestamps()
    }

    environment {
        STAGE = 'test'
    }

    stages {
        stage('Build npm dependencies') {
            steps {
              sh 'npm ci'
            }
        }
    }

    stages {
        stage('Build npm dependencies') {
            steps {
              sh 'npm run cypress:run'
            }
        }
    }

    post {
        always {
          cleanWs()
        }
    }
}
