{
  "openapi": "3.0.1",
  "info": {
    "title": "Timetable Field Number API",
    "description": "This is the API for all your Timetable Field Number needs",
    "contact": {
      "name": "ATLAS Team",
      "url": "https://confluence.sbb.ch/display/ATLAS/ATLAS+-+SKI+Business+Platform",
      "email": "TechSupport-ATLAS@sbb.ch"
    },
    "version": "0.49.0-SNAPSHOT"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/v1/field-numbers/{id}": {
      "get": {
        "tags": [
          "Timetable field numbers"
        ],
        "operationId": "getVersion",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Version"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Timetable field numbers"
        ],
        "operationId": "updateVersion",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Version"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Version"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Timetable field numbers"
        ],
        "operationId": "deleteVersion",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/v1/field-numbers/versions/{id}": {
      "put": {
        "tags": [
          "Timetable field numbers"
        ],
        "operationId": "updateVersionWithVersioning",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Version"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Version"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/field-numbers": {
      "get": {
        "tags": [
          "Timetable field numbers"
        ],
        "operationId": "getOverview",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Zero-based page index (0..N)",
            "schema": {
              "type": "integer",
              "default": 0
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "The size of the page to be returned",
            "schema": {
              "type": "integer",
              "default": 20
            }
          },
          {
            "name": "sort",
            "in": "query",
            "description": "Sorting criteria in the format: property(,asc|desc). Default sort order is ascending. Multiple sort criteria are supported.",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TimetableFieldNumberContainer"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Timetable field numbers"
        ],
        "operationId": "createVersion",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Version"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/Version"
                }
              }
            }
          }
        }
      }
    },
    "/v1/field-numbers/versions/{ttfnId}": {
      "get": {
        "tags": [
          "Timetable field numbers"
        ],
        "operationId": "getAllVersionsVersioned",
        "parameters": [
          {
            "name": "ttfnId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Version"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Version": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Technical identifier",
            "format": "int64"
          },
          "ttfnid": {
            "type": "string",
            "description": "Timetable field number identifier",
            "example": "ch:1:fpfnid:100000"
          },
          "name": {
            "type": "string",
            "description": "Name"
          },
          "number": {
            "type": "string",
            "description": "Number"
          },
          "swissTimetableFieldNumber": {
            "type": "string",
            "description": "Timetable field number"
          },
          "status": {
            "type": "string",
            "description": "Status",
            "enum": [
              "ACTIVE",
              "INACTIVE",
              "NEEDS_REVIEW",
              "IN_REVIEW",
              "REVIEWED"
            ]
          },
          "validFrom": {
            "type": "string",
            "description": "Date - valid from",
            "format": "date"
          },
          "validTo": {
            "type": "string",
            "description": "Date - valid to",
            "format": "date"
          },
          "businessOrganisation": {
            "type": "string",
            "description": "Business organisation",
            "example": "SBB"
          },
          "comment": {
            "type": "string",
            "description": "Additional comment"
          },
          "nameCompact": {
            "type": "string",
            "description": "Compact name"
          }
        }
      },
      "TimetableFieldNumber": {
        "type": "object",
        "properties": {
          "swissTimetableFieldNumber": {
            "type": "string",
            "description": "Timetable field number"
          },
          "ttfnid": {
            "type": "string",
            "description": "Timetable field number identifier",
            "example": "ch:1:fpfnid:100000"
          },
          "name": {
            "type": "string",
            "description": "Name"
          },
          "status": {
            "type": "string",
            "enum": [
              "ACTIVE",
              "INACTIVE",
              "NEEDS_REVIEW",
              "IN_REVIEW",
              "REVIEWED"
            ]
          },
          "validFrom": {
            "type": "string",
            "description": "Date - valid from",
            "format": "date"
          },
          "validTo": {
            "type": "string",
            "description": "Date - valid to",
            "format": "date"
          }
        }
      },
      "TimetableFieldNumberContainer": {
        "type": "object",
        "properties": {
          "fieldNumbers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimetableFieldNumber"
            }
          },
          "totalCount": {
            "type": "integer",
            "format": "int64"
          }
        }
      }
    }
  }
}